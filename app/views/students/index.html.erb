<h1>Listing Students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3"> Name</th>
      <th colspan="3">Email</th>
      <th colspan="3">Github</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td colspan="3"><%= link_to student.name, student %></td>
        <td colspan="3"><%= student.email %></td>
        <td colspan="3"><%= student.github %></td>
      </tr>
    <% end %>
  </tbody>
</table>

