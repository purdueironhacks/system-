<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"> Name</th>
      <th colspan="3">Email</th>
      <th colspan="3">Github</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td colspan="3"><%= student.name %></td>
        <td colspan="3"><%= student.email %></td>
        <td colspan="3"><%= student.github %></td>
        <td colspan="3"><%= link_to 'Show', student %></td>
        <td colspan="3"><%= link_to 'Edit', edit_student_path(student) %></td>
        <td colspan="3"><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

